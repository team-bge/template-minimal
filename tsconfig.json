{
  "compilerOptions": {
    "target": "es2016",
    "lib": [ "es2021", "dom" ],
    "module": "es6",
    "rootDir": "src",
    "allowJs": false,
    "sourceMap": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "moduleResolution": "node"
  }
}